# .env.example - Copy this file to .env and update values for your environment

# Database
DATABASE_URL=postgresql://credential_user:credential_pass@db:5432/credential_db

# JWT Secret - CHANGE THIS IN PRODUCTION!
SECRET_KEY=your-super-secret-key-change-in-production-12345

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Altrium - Degree Verification System

# JWT Token Expiry
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis
REDIS_URL=redis://redis:6379/0

# CORS Origins
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Environment
ENVIRONMENT=development
